@model IEnumerable<MvcPL.Models.BookIndexModel>

                      <div id="results">

                          @if (Model.Count() == 0)
                          {
                              <p>No matches found</p>
                          }
                          else
                          {

                              <div class="col-lg-12 col-xs-12 col-sm-12 col-md-12 table-responsive">
                                  <table class="table table-striped" id="BookTable">
                                      <caption>Results of book search</caption>
                                      <tr>
                                          <th>
                                              @Html.DisplayNameFor(model => model.FirstOrDefault().Name)
                                          </th>
                                          <th>
                                              @Html.DisplayNameFor(model => model.FirstOrDefault().Author.FullName)
                                          </th>
                                          <th>
                                              @Html.DisplayNameFor(model => model.FirstOrDefault().Author.LocationCoutry)
                                          </th>
                                          <th id="tableTdCentr">
                                              Add to MyBooks
                                          </th>
                                      </tr>

                                      @foreach (var item in Model)
                                      {
                                          <tr>
                                              <td>
                                                  @Html.ActionLink(item.Name, "Details", new { Id = item.Id })
                                              </td>
                                              <td>
                                                  @Html.ActionLink(item.Author.FullName, "Details", "Author", new { Id = item.Author.Id }, null)                                                  
                                              </td>
                                              <td>
                                                  @Html.DisplayFor(modelItem => item.Author.LocationCoutry)
                                              </td>
                                              <td id="tableTdCentr">
                                                  @if (!ViewBag.ListMyBooksId.Contains(item.Id))
                                                  {
                                                      @Html.ActionLink("Add", "AddBookToUser", "Home", new { Id = item.Id }, null)
                                                  }
                                              </td>
                                          </tr>
                                      }
                                  </table>
                             </div>
                                  }
                              </div>
                              
